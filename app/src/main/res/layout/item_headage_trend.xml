<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <TextView
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:gravity="center"
        android:id="@+id/headage_periods"
        android:background="@drawable/text_stroke_shape"
        android:text=""/>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/text_stroke_shape"
        android:gravity="center">
    <TextView
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:gravity="center"
        android:id="@+id/headage_num1"
        android:text="01"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/text_stroke_shape"
        android:gravity="center">
        <TextView
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:gravity="center"
            android:id="@+id/headage_num2"
            android:text="02"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/text_stroke_shape"
        android:gravity="center">
        <TextView
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:gravity="center"
            android:id="@+id/headage_num3"
            android:text="03"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/text_stroke_shape"
        android:gravity="center">
        <TextView
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:gravity="center"
            android:id="@+id/headage_num4"
            android:text="04"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/text_stroke_shape"
        android:gravity="center">
        <TextView
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:gravity="center"
            android:id="@+id/headage_num5"
            android:text="05"/>
    </LinearLayout>


</LinearLayout>
