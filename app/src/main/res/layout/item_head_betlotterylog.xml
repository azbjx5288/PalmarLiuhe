<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="20dp"
    android:paddingTop="15dp"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#141414"
            android:textSize="15sp"
            android:text="订单编号："/>

        <TextView
            android:id="@+id/lottery_sn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="7dp"
            android:textColor="#141414"
            android:textSize="15sp"/>

        <Button
            android:id="@+id/but_copy"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_marginStart="15dp"
            android:gravity="center"
            android:background="@drawable/log_butcopy_bg"
            android:textSize="14sp"
            android:textColor="@color/colorAccent"
            android:text="复制"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#141414"
            android:textSize="15sp"
            android:text="投注金额："/>

        <TextView
            android:id="@+id/all_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="7dp"
            android:textColor="@color/colorAccent"
            android:textSize="15sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#141414"
            android:textSize="15sp"
            android:text="投注注数："/>

        <TextView
            android:id="@+id/all_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="7dp"
            android:textColor="#8c8c8c"
            android:textSize="15sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#141414"
            android:textSize="15sp"
            android:text="投注返点："/>

        <TextView
            android:id="@+id/back_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="7dp"
            android:textColor="#8c8c8c"
            android:textSize="15sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#141414"
            android:textSize="15sp"
            android:text="投注时间："/>

        <TextView
            android:id="@+id/bet_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="7dp"
            android:textColor="#8c8c8c"
            android:textSize="15sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="15dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#141414"
            android:textSize="15sp"
            android:text="开奖号码："/>

        <TextView
            android:id="@+id/bet_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_marginStart="7dp"
            android:textColor="#8c8c8c"
            android:textSize="15sp"/>

        <LinearLayout
            android:id="@+id/number_linear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="visible"
            android:layout_marginStart="7dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/number01"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginEnd="3dp"
                    android:gravity="center"
                    android:background="@drawable/lottery_color_red"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:textSize="13sp"
                    android:text="-"/>
                <TextView
                    android:id="@+id/number02"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginEnd="3dp"
                    android:gravity="center"
                    android:background="@drawable/lottery_color_red"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:textSize="13sp"
                    android:text="-"/>
                <TextView
                    android:id="@+id/number03"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginEnd="3dp"
                    android:gravity="center"
                    android:background="@drawable/lottery_color_red"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:textSize="13sp"
                    android:text="-"/>
                <TextView
                    android:id="@+id/number04"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginEnd="3dp"
                    android:gravity="center"
                    android:background="@drawable/lottery_color_red"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:textSize="13sp"
                    android:text="-"/>
                <TextView
                    android:id="@+id/number05"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginEnd="3dp"
                    android:gravity="center"
                    android:background="@drawable/lottery_color_red"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:textSize="13sp"
                    android:text="-"/>
                <TextView
                    android:id="@+id/number06"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginEnd="3dp"
                    android:gravity="center"
                    android:background="@drawable/lottery_color_red"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:textSize="13sp"
                    android:text="-"/>
                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="3dp"
                    android:src="@mipmap/jiaxia"/>
                <TextView
                    android:id="@+id/number07"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:gravity="center"
                    android:background="@drawable/lottery_color_red"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:textSize="13sp"
                    android:text="-"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/anim_number01"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginEnd="3dp"
                    android:gravity="center"
                    android:textColor="#141414"
                    android:textSize="13sp"
                    android:text="-"/>
                <TextView
                    android:id="@+id/anim_number02"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginEnd="3dp"
                    android:gravity="center"
                    android:textColor="#141414"
                    android:textSize="13sp"
                    android:text="-"/>
                <TextView
                    android:id="@+id/anim_number03"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginEnd="3dp"
                    android:gravity="center"
                    android:textColor="#141414"
                    android:textSize="13sp"
                    android:text="-"/>
                <TextView
                    android:id="@+id/anim_number04"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginEnd="3dp"
                    android:gravity="center"
                    android:textColor="#141414"
                    android:textSize="13sp"
                    android:text="-"/>
                <TextView
                    android:id="@+id/anim_number05"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginEnd="3dp"
                    android:gravity="center"
                    android:textColor="#141414"
                    android:textSize="13sp"
                    android:text="-"/>
                <TextView
                    android:id="@+id/anim_number06"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginEnd="3dp"
                    android:gravity="center"
                    android:textColor="#141414"
                    android:textSize="13sp"
                    android:text="-"/>
                <TextView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="3dp"
                    android:src="@mipmap/jiaxia"/>
                <TextView
                    android:id="@+id/anim_number07"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:gravity="center"
                    android:textColor="#141414"
                    android:textSize="13sp"
                    android:text="-"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@color/colorAccent"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:weightSum="3"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:text="投注号码"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:text="投注金额"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:text="中奖情况"/>
    </LinearLayout>
</LinearLayout>