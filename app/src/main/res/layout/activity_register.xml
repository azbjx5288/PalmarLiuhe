<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:adjustViewBounds="true"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/colorAccent"
        android:textSize="20sp"
        android:visibility="gone"
        android:text="手机号注册"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="30dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:gravity="center_vertical"
            android:layout_marginStart="20dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:src="@mipmap/yonghutouxiang"/>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:background="#e2e2e2"/>

            <EditText
                android:id="@+id/input_account"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:maxLength="12"
                android:digits="0123456789abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
                android:layout_gravity="bottom"
                android:hint="账号（4-12位数字或字母）"
                android:background="#00000000"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="#e2e2e2"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="30dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="bottom"
                android:src="@mipmap/mima"/>

            <View
                android:id="@+id/line1"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_toEndOf="@id/img"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:background="#e2e2e2"/>

            <EditText
                android:id="@+id/input_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLength="15"
                android:inputType="textPassword"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/line1"
                android:layout_toStartOf="@id/img_clear"
                android:layout_gravity="bottom"
                android:hint="密码（6-15位数字或字母）"
                android:background="#00000000"/>

            <ImageView
                android:id="@+id/img_clear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@+id/is_show_pw"
                android:layout_marginStart="20dp"
                android:src="@mipmap/qingchu"/>
            <CheckBox
                android:id="@+id/is_show_pw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:background="@drawable/user_check_bg"
                android:button="@null"
                android:layout_alignParentEnd="true"
                android:src="@mipmap/qingchu"/>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="#e2e2e2"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="30dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/img3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="bottom"
                android:src="@mipmap/mima"/>

            <View
                android:id="@+id/line13"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_toEndOf="@id/img3"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:background="#e2e2e2"/>

            <EditText
                android:id="@+id/input_password3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLength="15"
                android:inputType="textPassword"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/line13"
                android:layout_toStartOf="@id/img_clear3"
                android:layout_gravity="bottom"
                android:hint="确认密码"
                android:background="#00000000"/>

            <ImageView
                android:id="@+id/img_clear3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@+id/is_show_pw3"
                android:layout_marginStart="20dp"
                android:src="@mipmap/qingchu"/>
            <CheckBox
                android:id="@+id/is_show_pw3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:background="@drawable/user_check_bg"
                android:button="@null"
                android:layout_alignParentEnd="true"
                android:src="@mipmap/qingchu"/>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="#e2e2e2"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="30dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:gravity="center_vertical"
            android:layout_marginStart="20dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:src="@mipmap/yanzhengma"/>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:background="#e2e2e2"/>

            <EditText
                android:id="@+id/input_phone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:maxLength="11"
                android:inputType="number"
                android:layout_gravity="bottom"
                android:hint="手机号"
                android:background="#00000000"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="#e2e2e2"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="30dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/img2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="bottom"
                android:src="@mipmap/yzma"/>

            <View
                android:id="@+id/line12"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_toEndOf="@id/img2"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="15dp"
                android:background="#e2e2e2"/>

            <EditText
                android:id="@+id/input_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/line12"
                android:singleLine="true"
                android:maxLength="8"
                android:layout_toStartOf="@id/send_code"
                android:layout_gravity="bottom"
                android:hint="验证码"
                android:background="#00000000"/>


            <ImageView
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:id="@+id/register_verfication"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="10dp"/>
            <Button
                android:id="@+id/send_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:visibility="gone"
                android:background="@drawable/login_but_bg"
                android:layout_alignParentEnd="true"
                android:textColor="@color/white"
                android:text="发送验证码"/>

        </RelativeLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="#e2e2e2"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <CheckBox
            android:id="@+id/protocol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:checked="true"
            android:layout_marginStart="20dp"
            android:paddingHorizontal="5dp"
            android:button="@drawable/protocol_check_bg"
            android:textSize="12sp"
            android:text="我已阅读并同意"
            android:textColor="#7f7f7f"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/protocol"
            android:layout_alignBottom="@+id/protocol"
            android:textSize="12sp"
            android:id="@+id/xieyi"
            android:text="《掌上六合购彩服务协议》"
            android:textColor="@color/colorAccent"/>
    </RelativeLayout>

    <Button
        android:id="@+id/but_register"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/login_but_bg"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:text="立即注册"/>

</LinearLayout>