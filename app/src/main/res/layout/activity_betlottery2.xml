<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f3f3f3">

    <RelativeLayout
        android:id="@+id/title_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorAccent">
        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:adjustViewBounds="true"
            android:layout_centerVertical="true"
            android:src="@drawable/back"/>
        <TextView
            android:id="@+id/game_type"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:drawablePadding="3dp"
            android:drawableEnd="@mipmap/xialasanjiaoxing"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:text=""/>
        <ImageView
            android:id="@+id/setting_img"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingEnd="20dp"
            android:paddingStart="20dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/gongneng"/>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/banner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f9f9f9"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_below="@+id/title_layout"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/shijianzhong"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/next_issue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#c0c0c0"
                    android:textSize="12sp"/>
                <TextView
                    android:id="@+id/next_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textColor="#f1a84b"
                    android:textSize="12sp"/>
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#e0e0e0"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">
            <TextView
                android:id="@+id/issue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:drawablePadding="5dp"
                android:drawableStart="@mipmap/caipiaoqoioi"
                android:textColor="#c0c0c0"
                android:textSize="12sp"
                android:text="上期开奖号码："/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginStart="5dp"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <TextView
                        android:id="@+id/number01"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_marginEnd="3dp"
                        android:gravity="center"
                        android:background="@drawable/lottery_color_red"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:textSize="8sp"
                        android:text="-"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <TextView
                        android:id="@+id/number02"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_marginEnd="3dp"
                        android:gravity="center"
                        android:background="@drawable/lottery_color_red"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:textSize="8sp"
                        android:text="-"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <TextView
                        android:id="@+id/number03"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_marginEnd="3dp"
                        android:gravity="center"
                        android:background="@drawable/lottery_color_red"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:textSize="8sp"
                        android:text="-"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <TextView
                        android:id="@+id/number04"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_marginEnd="3dp"
                        android:gravity="center"
                        android:background="@drawable/lottery_color_red"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:textSize="8sp"
                        android:text="-"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <TextView
                        android:id="@+id/number05"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_marginEnd="3dp"
                        android:gravity="center"
                        android:background="@drawable/lottery_color_red"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:textSize="8sp"
                        android:text="-"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <TextView
                        android:id="@+id/number06"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_marginEnd="3dp"
                        android:gravity="center"
                        android:background="@drawable/lottery_color_red"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:textSize="8sp"
                        android:text="-"/>
                </LinearLayout>
                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_gravity="bottom"
                    android:layout_marginEnd="3dp"
                    android:visibility="gone"
                    android:src="@mipmap/jiaxia"/>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <TextView
                        android:id="@+id/number07"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_marginEnd="3dp"
                        android:gravity="center"
                        android:background="@drawable/lottery_color_red"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:textSize="8sp"
                        android:text="-"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <TextView
                        android:id="@+id/number08"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_marginEnd="3dp"
                        android:gravity="center"
                        android:background="@drawable/lottery_color_red"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:textSize="8sp"
                        android:text="-"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <TextView
                        android:id="@+id/number09"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_marginEnd="3dp"
                        android:gravity="center"
                        android:background="@drawable/lottery_color_red"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:textSize="8sp"
                        android:text="-"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <TextView
                        android:id="@+id/number10"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_marginEnd="3dp"
                        android:gravity="center"
                        android:background="@drawable/lottery_color_red"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:textSize="8sp"
                        android:text="-"/>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:visibility="gone"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/anim_number01"
                    android:layout_width="15dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="3dp"
                    android:gravity="center"
                    android:textColor="#141414"
                    android:textSize="8sp"
                    android:text="-"/>
                <TextView
                    android:id="@+id/anim_number02"
                    android:layout_width="15dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="3dp"
                    android:gravity="center"
                    android:textColor="#141414"
                    android:textSize="8sp"
                    android:text="-"/>
                <TextView
                    android:id="@+id/anim_number03"
                    android:layout_width="15dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="3dp"
                    android:gravity="center"
                    android:textColor="#141414"
                    android:textSize="8sp"
                    android:text="-"/>
                <TextView
                    android:id="@+id/anim_number04"
                    android:layout_width="15dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="3dp"
                    android:gravity="center"
                    android:textColor="#141414"
                    android:textSize="8sp"
                    android:text="-"/>
                <TextView
                    android:id="@+id/anim_number05"
                    android:layout_width="15dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="3dp"
                    android:gravity="center"
                    android:textColor="#141414"
                    android:textSize="8sp"
                    android:text="-"/>
                <TextView
                    android:id="@+id/anim_number06"
                    android:layout_width="15dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="3dp"
                    android:gravity="center"
                    android:textColor="#141414"
                    android:textSize="8sp"
                    android:text="-"/>
                <TextView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginEnd="3dp"/>
                <TextView
                    android:id="@+id/anim_number07"
                    android:layout_width="15dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="#141414"
                    android:textSize="8sp"
                    android:text="-"/>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <View
        android:id="@+id/top_line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginBottom="10dp"
        android:background="#e0e0e0"
        android:layout_below="@+id/banner"/>


    <LinearLayout
        android:id="@+id/left_linear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_below="@+id/top_line"
        android:layout_above="@+id/select_number"
        android:orientation="vertical">

        <TextView
            android:id="@+id/number_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingStart="5dp"
            android:background="@mipmap/xuanma"
            android:textSize="13sp"
            android:textColor="@color/white"
            android:text="选码"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:paddingStart="5dp"
            android:background="@mipmap/peilv"
            android:textSize="13sp"
            android:textColor="@color/white"
            android:text="赔率"/>

        <TextView
            android:id="@+id/shake"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:paddingStart="3dp"
            android:drawableTop="@mipmap/yaoyiyao"
            android:gravity="center"
            android:textSize="13sp"
            android:textColor="#686666"
            android:text="@string/yaoyiayo"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toEndOf="@+id/left_linear"
        android:layout_alignTop="@+id/left_linear"
        android:layout_above="@+id/select_number"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/price_linear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="gone">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#141414"
                android:textSize="14sp"
                android:text="赔率："/>
            <TextView
                android:id="@+id/price_top"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorAccent"
                android:textSize="14sp" />
        </LinearLayout>


        <!--<ScrollInterceptScrollView-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="match_parent"-->
            <!--android:layout_marginStart="15dp"-->
            <!--android:layout_marginEnd="15dp"-->
            <!--android:fillViewport="true">-->
        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:id="@+id/recycler_linear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>


        <!--</ScrollInterceptScrollView>-->

    </LinearLayout>



    <TextView
        android:id="@+id/select_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:background="#eaeaea"
        android:layout_above="@+id/bottom_line"
        android:gravity="center"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColor="@color/colorAccent"
        android:textSize="14sp"/>

    <View
        android:id="@+id/bottom_line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#e0e0e0"
        android:layout_above="@+id/bottom_linear"/>


    <RelativeLayout
        android:id="@+id/bottom_linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:layout_alignParentBottom="true"
        android:background="#f9f9f9">

        <ImageView
            android:id="@+id/clear_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@mipmap/lajixiang"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/clear_img"
            android:layout_toStartOf="@+id/submit"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#737171"
                android:textSize="12sp"
                android:text="每注"/>

            <EditText
                android:id="@+id/edit_money"
                android:layout_width="120dp"
                android:layout_height="29dp"
                android:paddingStart="5dp"
                android:background="@drawable/bet_edit_bg"
                android:inputType="number"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:textColor="#737171"
                android:textSize="13sp"
                android:hint="输入金额"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#737171"
                android:textSize="12sp"
                android:text="元"/>

        </LinearLayout>



        <Button
            android:id="@+id/submit"
            android:layout_width="70dp"
            android:layout_height="35dp"
            android:layout_centerVertical="true"
            android:background="@drawable/login_but_bg"
            android:layout_alignParentEnd="true"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:text="提交"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/close_text"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignTop="@+id/bottom_linear"
        android:background="#99000000"
        android:gravity="center"
        android:textColor="@color/colorAccent"
        android:textSize="20sp"
        android:visibility="gone"
        android:text="已封盘"/>


</RelativeLayout>