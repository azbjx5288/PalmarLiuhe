<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/child_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:gravity="center"/>

    <RadioGroup
        android:id="@+id/select_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/bg_input_edittext"
        android:orientation="horizontal">
        <RadioButton
            android:id="@+id/rb_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="1"
            android:button="@null"
            android:textColor="@drawable/bet_radio_check_text"
            android:text="全"/>
        <RadioButton
            android:id="@+id/rb_big"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@drawable/bet_radio_check_text"
            android:gravity="center"
            android:layout_weight="1"
            android:button="@null"
            android:text="大"/>
        <RadioButton
            android:id="@+id/rb_min"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@drawable/bet_radio_check_text"
            android:gravity="center"
            android:layout_weight="1"
            android:button="@null"
            android:text="小"/>
        <RadioButton
            android:id="@+id/rb_single"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@drawable/bet_radio_check_text"
            android:gravity="center"
            android:layout_weight="1"
            android:button="@null"
            android:text="单"/>
        <RadioButton
            android:id="@+id/rb_double"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@drawable/bet_radio_check_text"
            android:gravity="center"
            android:layout_weight="1"
            android:button="@null"
            android:text="双"/>
        <RadioButton
            android:id="@+id/rb_clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@drawable/bet_radio_check_text"
            android:gravity="center"
            android:layout_weight="1"
            android:button="@null"
            android:text="清"/>
    </RadioGroup>
    <!--<LinearLayout-->
        <!--android:layout_width="match_parent"-->
        <!--android:orientation="vertical"-->
        <!--android:layout_height="wrap_content">-->

        <android.support.v7.widget.RecyclerView
            android:id="@+id/number_recycler"
            android:descendantFocusability="blocksDescendants"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    <!--</LinearLayout>-->
</LinearLayout>