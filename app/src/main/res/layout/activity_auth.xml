<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="30dp"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/img1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="bottom"
                android:src="@mipmap/yonghutouxiang"/>

            <View
                android:id="@+id/line11"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_toEndOf="@id/img1"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:background="#e2e2e2"/>

            <EditText
                android:id="@+id/input_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxEms="5"
                android:inputType="phone"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/line11"
                android:layout_gravity="bottom"
                android:hint="请输入手机号"
                android:background="#00000000"/>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="#e2e2e2"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="30dp"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/img2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="bottom"
                android:src="@mipmap/yanzhengma"/>

            <View
                android:id="@+id/line12"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_toEndOf="@id/img2"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="15dp"
                android:background="#e2e2e2"/>

            <EditText
                android:id="@+id/input_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxEms="5"
                android:inputType="number"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/line12"
                android:layout_toStartOf="@id/send_code"
                android:layout_gravity="bottom"
                android:hint="请输入验证码"
                android:background="#00000000"/>

            <Button
                android:id="@+id/send_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:background="@drawable/login_but_bg"
                android:layout_alignParentEnd="true"
                android:textColor="@color/white"
                android:text="发送验证码"/>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="#e2e2e2"/>
    </LinearLayout>

    <Button
        android:id="@+id/submit"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/login_but_bg"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:text="提交"/>

</LinearLayout>